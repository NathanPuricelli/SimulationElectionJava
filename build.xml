<?xml version="1.0" encoding="UTF-8"?>
<project name="simulation" basedir="." default="main">
    <property name="src.dir" value="src"/>
    <property name="bin.dir" value="bin"/>
    <property name="jar.dir" value="jar"/>
    <property name="main-class"  value="Main"/>
    
    <target name="clean" description="Delete all generated files">
        <delete dir="bin"/>
        <delete file="simulations.jar"/>
    </target>

    <target name="compile" description="Compiles the Task">
        <mkdir dir="${bin.dir}"/>
        <javac encoding="UTF-8" srcdir="src" destdir="bin"/>
    </target>

    <target name="jar" depends = "compile" description="JARs the Task">
        <mkdir dir="${jar.dir}"/>
        <jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${bin.dir}">
            <manifest>
                <attribute name="Main-Class" value="${main-class}"/>
            </manifest>
        </jar>
    </target>

    <target name="run" depends="jar">
        <java jar="${jar.dir}/${ant.project.name}.jar" fork="true"/>
    </target>

    <target name="main" depends="clean,run"/>

</project>